{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2015", "ES2020.BigInt", "DOM"],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "noEmit": false
  },
  "include": [
    "monster_test.ts",
    "my-game/**/*.ts",
    "optional_scalars/**/*.ts",
    "namespace_test/**/*.ts",
    "union_vector/**/*.ts"
  ]
}
